{
  "name": "legal-workspace-vue",
  "version": "3.3.0",
  "description": "AI法律助手 - Legal Workspace",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "help:dev": "vitepress dev help --port 5174",
    "help:build": "vitepress build help",
    "help:preview": "vitepress preview help",
    "mock:server": "cd tools/mock-server && node index.js",
    "deploy": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy.ps1 -Env staging",
    "deploy:prod": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy.ps1 -Env production",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "d3": "^7.8.5",
    "pinia": "^3.0.4",
    "vue": "^3.4.21",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "@vitest/ui": "^4.0.15",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.23",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.0",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "sass": "^1.96.0",
    "vite": "^5.1.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.15"
  },
  "keywords": [
    "legal",
    "ai",
    "vue",
    "workspace"
  ],
  "author": "Alpha&Leader Legal Tech",
  "license": "MIT",
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
